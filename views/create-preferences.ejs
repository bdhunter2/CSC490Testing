<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Preferences</title>
    <link rel="stylesheet" href="/path/to/your/css">
</head>
<body>
    <div class="container">
        <h1>Create User Preferences</h1>
        
        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>

        <% if (message) { %>
            <div class="success-message">
                <p><%= message %></p>
            </div>
        <% } %>

        <form action="/preferences/create" method="POST">
            <!-- auto increment this? -->
            <div class="form-group">
                <label for="preference_id">Preference ID:</label>
                <input type="number" id="preference_id" name="preference_id" required>
            </div>

            <div class="form-group">
                <label for="user_id">User ID:</label>
                <input type="number" id="user_id" name="user_id" required>
            </div>
            
            <div class="form-group">
                <label for="preferred_types">Preferred Workout Types:</label>
                <select id="preferred_types" name="preferred_types" required>
                    <option value="" disabled selected>Select type</option>
                    <option value="Weightlifting">Weightlifting</option>
                    <option value="Running">Running</option>
                    <option value="Bodybuilding">Bodybuilding</option>
                    <option value="Powerlifting">Powerlifting</option>
                    <option value="Cycling">Cycling</option>
                </select>            
            </div>
            
            <div class="form-group">
                <label for="preferred_intensity">Preferred Intensity:</label>
                <select id="preferred_intensity" name="preferred_intensity" required>
                    <option value="" disabled selected>Select intensity</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="preferred_duration">Preferred Duration (minutes):</label>
                <input type="number" id="preferred_duration" name="preferred_duration" min="1" required>
            </div>
            
            <div class="form-group">
                <label for="preferred_exercise">Preferred Exercises:</label>
                <select id="preferred_exercise" name="preferred_exercise" required>
                    <option value="" disabled selected>Select exercise</option>
                    <option value="Squat">Squat</option>
                    <option value="Bench Press">Bench Press</option>
                    <option value="Running">Running</option>
                    <option value="Treadmill">Treadmill</option>
                    <option value="Cycling">Cycling</option>
                    <option value="Stationary Bike">Stationary Bike</option>
                    <option value="Deadlift">Deadlift</option>
                    <option value="Hammer_Curl">Hammer Curl</option>
                    <option value="Bicep_Curl">Bicep Curl</option>
                    <option value="Concentration_Curl">Concentration Curl</option>
                </select>                
            </div>
            
            <button type="submit" class="submit-btn">Create Preferences</button>
        </form>
    </div>
</body>
</html>
